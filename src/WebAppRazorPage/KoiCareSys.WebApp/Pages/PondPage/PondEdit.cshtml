@page "{id:guid}"
@model KoiCareSys.WebApp.Pages.PondPage.PondEditModel
@{
    ViewData["Title"] = "Edit Pond";
}

<h2>Edit Pond</h2>

<form method="post">
    <div class="form-group">
        <label>Pond Name</label>
        <input type="text" asp-for="Pond.PondName" class="form-control" />
        <span asp-validation-for="Pond.PondName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Volume (m³)</label>
        <input type="number" asp-for="Pond.Volume" class="form-control" step="0.01" />
        <span asp-validation-for="Pond.Volume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Depth (m)</label>
        <input type="number" asp-for="Pond.Depth" class="form-control" step="0.01" />
        <span asp-validation-for="Pond.Depth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Drain Count</label>
        <input type="number" asp-for="Pond.DrainCount" class="form-control" />
        <span asp-validation-for="Pond.DrainCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Skimmer Count</label>
        <input type="number" asp-for="Pond.SkimmerCount" class="form-control" />
        <span asp-validation-for="Pond.SkimmerCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Pump Capacity (L/h)</label>
        <input type="number" asp-for="Pond.PumpCapacity" class="form-control" step="0.01" />
        <span asp-validation-for="Pond.PumpCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image URL</label>
        <input type="text" asp-for="Pond.ImgUrl" class="form-control" />
        <span asp-validation-for="Pond.ImgUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Note</label>
        <textarea asp-for="Pond.Note" class="form-control"></textarea>
        <span asp-validation-for="Pond.Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Pond.Description" class="form-control"></textarea>
        <span asp-validation-for="Pond.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Pond.Status" class="form-control">
            <option value="">Select Status</option>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="UnderMaintenance">Under Maintenance</option>
        </select>
        <span asp-validation-for="Pond.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Is Qualified?</label>
        <select asp-for="Pond.IsQualified" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Pond.IsQualified" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Pond.Id" />
    <input type="hidden" asp-for="Pond.UserId" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="/PondPage/PondIndex" class="btn btn-secondary">Cancel</a>
</form>
